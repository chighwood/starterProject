<% title = "Login"; %>

<div class="container">
    <h1><%= title %></h1>

    <% if (locals.message) { %>
        <div class="flash-message">
            <%= locals.message %>
        </div>
    <% } %>

    <% if (locals.errors) { %>
        <div class="error-message">
            <ul>
                <% locals.errors.forEach(function(error) { %>
                    <li><%= error %></li>
                <% }); %>
            </ul>
        </div>
    <% } %>

      <form action="/account/login" method="POST" class="login-form">
        <div class="form-group">
            <label for="email">Email:</label>
            <input type="email" id="email" name="account_email" required>
        </div>
    
        <div class="form-group">
            <label for="password">Password:</label>
            <input type="password" id="password" name="account_password" required
            placeholder="Enter your password" 
            pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$">
        </div>
    
        <button type="submit">Login</button>
    </form>    

    <p class="register-link">
        No account? <a href="./register">Sign up!</a>
    </p>
</div>
